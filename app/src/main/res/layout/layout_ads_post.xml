<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ads_row_post"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:background="@color/background"
    android:orientation="horizontal"
    android:padding="8.0dip">

    <ImageView
        android:id="@+id/ads_image_post"
        android:layout_width="120.0dip"
        android:layout_height="90.0dip"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@color/text_gray" />

    <ImageView
        android:id="@+id/ads_imagePin1"
        android:layout_width="27.0dip"
        android:layout_height="17.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@id/ads_image_post"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_drawer"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_ads_heading"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ads_image_post"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="8.0dip"
        android:textColor="@color/title"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ads_heading"
        android:layout_toRightOf="@id/ads_image_post"
        android:drawablePadding="5.0dip"
        android:orientation="horizontal"
        android:paddingLeft="3.0dip">

        <TextView
            android:id="@+id/txt_ads_source"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="5.0dip"
            android:text="Được tài trợ"
            android:textColor="@color/text_gray"
            android:textSize="10.0sp" />
    </LinearLayout>
</RelativeLayout>