<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="horizontal"
    android:padding="3.0dip">

    <RelativeLayout
        android:id="@+id/item_news1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_weight="1.0"
        android:background="#ffffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/c1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip">

            <ImageView
                android:id="@+id/img_newslistlatest"
                android:layout_width="fill_parent"
                android:layout_height="120.0dip"
                android:scaleType="centerCrop"
                android:src="@color/text_gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_heading_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c1"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/title"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_heading_title"
            android:drawablePadding="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_src_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingBottom="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:textColor="@color/text_gray"
                android:text="Dân Trí"
                android:textSize="10.0sp" />

            <View
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="7.0dip"
                android:layout_marginTop="6.0dip"
                android:background="@color/text_gray"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txt_time_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="5.0dip"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="10.0sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_news2"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_weight="1.0"
        android:background="#ffffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/c2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip">

            <ImageView
                android:id="@+id/img_newslistlatest2"
                android:layout_width="fill_parent"
                android:layout_height="120.0dip"
                android:scaleType="centerCrop"
                android:src="@color/text_gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_heading_title2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/title"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_heading_title2"
            android:drawablePadding="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_src_news2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingBottom="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:textColor="@color/text_gray"
                android:text="Dân trí"
                android:textSize="10.0sp" />

            <View
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="7.0dip"
                android:layout_marginTop="6.0dip"
                android:background="@color/text_gray"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txt_time_update2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="5.0dip"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="10.0sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>